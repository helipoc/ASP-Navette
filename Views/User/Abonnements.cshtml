@if (ViewBag.abos != null)
{



    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Ville depart</th>
            <th scope="col">Ville darrive </th>
            <th scope="col">Date debute</th>
            <th scope="col">Date fin</th>
            <th scope="col">Heure Depart</th>
            <th scope="col">Heure Darriv√©</th>
            <th scope="col">Prix Dh/mois</th>



        </tr>
    </thead>
    <tbody>
        @foreach (Abonnement a in ViewBag.abos)
            {
                <tr>
                    <td>
                        @a.villeDar?.nom
                    </td>
                    <td>
                        @a.villeDar?.nom
                    </td>
                    <td>
                        @a.d_Debut?.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @a.d_Fin?.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @a.h_Dep
                    </td>
                    <td>
                        @a.h_Arr
                    </td>
                    <td>
                        @a.prix DH
                    </td>
                    <td>


                        <a class="link-danger" asp-controller="User" asp-action="Deabonner" asp-route-id="@a.ID">Bonjour
                            S'abonner</a>
                    </td>


                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">
    Vous n'avaiz aucun Abonnement
</div>
}