@if(ViewBag.Success != null) {
    <div class="alert alert-success">
        @ViewBag.Success
    </div>
}

@if (ViewBag.props != null && ViewBag.props.Length > 0)
{

    <h3 class="mt-5 display-5"> Propositions des Clients : </h3>

    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Ville depart</th>
            <th scope="col">Ville darrive </th>
            <th scope="col">Heure Depart</th>
            <th scope="col">Heure Darrivé</th>
            <th scope="col">Nombre des interessé</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Proposition p in ViewBag.props)
            {
                <tr>
                    <td>
                        @p.villeDep?.nom
                    </td>
                    <td>
                        @p.villeDar?.nom
                    </td>
                    <td>
                        @p.h_Dep
                    </td>
                    <td>
                        @p.h_Arr
                    </td>
                    <td>
                        @p.nbVote
                    </td>
                    <td>
                        <a class="link-success" asp-controller="Soc" asp-action="prendEnCharge"
                    asp-route-id="@p.ID">Prend En Charge</a>

                    </td>


                </tr>
            }
        </tbody>
    </table>
}else {
    <div class="alert alert-warning">
        Aucun nouveau Proposition !
    </div>
}